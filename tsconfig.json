{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "webworker",
      "es2015.promise",
      "es2016.array.include",
      "es2017.object",
      "dom.iterable",
      "scripthost"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "resources/assets/ts/",
    "paths": {
      "systems/*": [ "systems/*" ],
      "components/*": [ "components/*" ],
      "utilities/*": [ "utilities/*" ]
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "vendor"
  ]
}